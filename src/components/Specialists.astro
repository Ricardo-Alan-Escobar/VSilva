---
import "../styles/global.css";

const specialists = [
  { name: "Jorge Silva", role: "Ingeniero de Redes", expertise: "Especialista en diseño de infraestructuras de red", image: "/public/jorge.jpg" },
  { name: "Ricardo Escobar", role: "Desarrollador Web", expertise: "Experto en desarrollo de software a medida", image: "/public/ricardo.jpg" },
  { name: "Luis Cruz", role: "Consultor IT", expertise: "Asesora en transformación digital empresarial", image: "/public/luis.png" },
];
---

<section class="relative w-full py-12 md:py-24 lg:py-32 bg-white">
  <div class="container px-4 md:px-6 mx-auto">
    <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-center mb-12">
      Nuestros Especialistas
    </h2>
    
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {specialists.map(specialist => (
        <div class="flex flex-col items-center text-center p-6 bg-white rounded-lg shadow-lg">
          <img src={specialist.image} alt={specialist.name} class="w-32 h-32 object-cover rounded-full border-4 border-blue-500 mb-4 shadow-md" />
          <h3 class="text-xl font-bold mb-2">{specialist.name}</h3>
          <p class="text-blue-600 mb-2">{specialist.role}</p>
          <p class="text-gray-500">{specialist.expertise}</p>
        </div>
      ))}
    </div>
  </div>
  <svg class="absolute bottom-0 left-0 w-full h-auto pointer-events-none text-gray-900" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
   
    <path d="M1200,120 C1050,100 850,80 600,100 C350,120 150,90 0,100 L0,120 L1200,120 Z"></path>
  </svg>
</section>
